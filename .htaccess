RewriteEngine On

# Ne pas réécrire les requêtes pour les fichiers existants
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Ne pas réécrire les requêtes pour les dossiers existants
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Ne pas réécrire les requêtes pour les assets (CSS, JS, images, etc.)
RewriteRule ^assets/ - [L]

# Rediriger toutes les autres requêtes vers index.php
RewriteRule ^(.*)$ index.php [QSA,L]
